<?xml version="1.0" encoding="UTF-8"?>

<!-- Corrected XML declaration from <?XML to <?xml (lowercase) -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #f0f0f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.asistencia.control.VentaController">
    
    <top>
        <VBox style="-fx-background-color: #ff6b35; -fx-padding: 25;">
            <Label style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;" text="GESTION DE VENTAS" />
            <Label style="-fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Registra, procesa y analiza todas las transacciones comerciales" />
        </VBox>
    </top>
    
    <center>
        <VBox minHeight="-Infinity" minWidth="-Infinity" spacing="20" style="-fx-padding: 25;">
            
            <VBox style="-fx-border-color: #e0e0e0; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #ff6b35; -fx-padding: 0 0 15 0;" text="FORMULARIO DE VENTA" />
                
                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="150" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="180" prefWidth="250" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="150" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="180" prefWidth="250" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="35" />
                        <RowConstraints minHeight="35" />
                        <RowConstraints minHeight="35" />
                    </rowConstraints>
                    
                    <Label style="-fx-font-weight: bold;" text="Numero de Venta:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtNumero" promptText="Generado automaticamente" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label style="-fx-font-weight: bold;" text="Fecha de Venta:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <DatePicker fx:id="dpFecha" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    
                    <Label style="-fx-font-weight: bold;" text="Nombre del Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCliente" promptText="Referencia del cliente" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label style="-fx-font-weight: bold;" text="Nombre de Zapatilla:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtProducto" promptText="Referencia del zapato" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    
                    <Label style="-fx-font-weight: bold;" text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtCantidad" promptText="Cantidad de pares" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label style="-fx-font-weight: bold;" text="Precio Unitario:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="txtPrecio" promptText="0.00" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                </GridPane>
                
                <HBox spacing="12" style="-fx-padding: 15 0 0 0;">
                    <Button onAction="#crearVenta" style="-fx-padding: 12; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #ff6b35; -fx-text-fill: white;" text="GUARDAR VENTA" />
                    <Button onAction="#limpiarFormulario" style="-fx-padding: 12; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #95a5a6; -fx-text-fill: white;" text="LIMPIAR FORMULARIO" />
                </HBox>
            </VBox>
            
            <HBox style="-fx-background-color: #ff6b35; -fx-padding: 20; -fx-alignment: center;">
                <Label fx:id="lblTotal" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Total de Ventas: 0.00" />
            </HBox>
            
            <VBox style="-fx-border-color: #e0e0e0; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #ff6b35; -fx-padding: 0 0 15 0;" text="HISTORIAL DE VENTAS" />
                <TableView fx:id="tableView" style="-fx-font-size: 11;" VBox.vgrow="ALWAYS" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
