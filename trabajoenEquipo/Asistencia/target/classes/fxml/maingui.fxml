<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="bp" prefHeight="800" prefWidth="1200" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="pe.edu.upeu.asistencia.control.MainguiController" 
            style="-fx-background-color: #f0f0f5;">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <MenuBar fx:id="menuBar" style="-fx-background-color: #2c3e50; -fx-text-fill: white;">
                <menus>
                    <Menu text="GESTION" style="-fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;">
                        <items>
                            <MenuItem fx:id="menuItem1" text="Modulo de Zapatillas" onAction="#abrirProductos"/>
                            <MenuItem fx:id="menuItem3" text="Modulo de Clientes" onAction="#abrirClientes"/>
                            <MenuItem fx:id="menuItem4" text="Modulo de Ventas" onAction="#abrirVentas"/>
                            <SeparatorMenuItem />
                            <MenuItem fx:id="menuItem2" text="Salir del Sistema" onAction="#salir"/>
                        </items>
                    </Menu>
                    <Menu text="REPORTES" style="-fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;">
                        <items>
                            <MenuItem text="Ventas Totales" />
                            <MenuItem text="Inventario de Zapatos" />
                            <MenuItem text="Clientes VIP" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            
            <VBox style="-fx-padding: 15; -fx-background-color: #34495e;">
                <Label text="ZAPATERIA PRO - PANEL DE CONTROL" 
                       style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
                <Label text="Gestion Completa de Inventario y Ventas" 
                       style="-fx-text-fill: #ff6b35; -fx-font-size: 11; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </top>
    
    <center>
        <TabPane fx:id="tabPane" prefHeight="600" prefWidth="1200" 
                 tabClosingPolicy="UNAVAILABLE" 
                 style="-fx-background-color: #f0f0f5;">
            <tabs>
                <Tab text="Panel Principal" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <VBox spacing="20" style="-fx-padding: 25;">
                                
                                <VBox style="-fx-background-color: #ff6b35; -fx-padding: 25; -fx-text-fill: white;">
                                    <Label text="Bienvenido a Zapateria Pro" 
                                           style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;"/>
                                    <Label text="Administra tu inventario de zapatillas, clientes y ventas" 
                                           style="-fx-text-fill: white; -fx-font-size: 12;"/>
                                </VBox>
                                
                                <HBox spacing="20">
                                    <VBox style="-fx-border-color: #2c3e50; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;" 
                                          HBox.hgrow="ALWAYS">
                                        <Label text="ZAPATILLAS" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                        <Label text="Gestion de Inventario" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                                        <Button text="ABRIR MODULO" style="-fx-padding: 10; -fx-background-color: #2c3e50; -fx-text-fill: white;" 
                                                onAction="#abrirProductos" VBox.vgrow="ALWAYS"/>
                                    </VBox>
                                    
                                    <VBox style="-fx-border-color: #34495e; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;" 
                                          HBox.hgrow="ALWAYS">
                                        <Label text="CLIENTES" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                                        <Label text="Base de Datos de Compradores" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                                        <Button text="ABRIR MODULO" style="-fx-padding: 10; -fx-background-color: #34495e; -fx-text-fill: white;" 
                                                onAction="#abrirClientes" VBox.vgrow="ALWAYS"/>
                                    </VBox>
                                    
                                    <VBox style="-fx-border-color: #ff6b35; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;" 
                                          HBox.hgrow="ALWAYS">
                                        <Label text="VENTAS" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #ff6b35;"/>
                                        <Label text="Seguimiento de Transacciones" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                                        <Button text="ABRIR MODULO" style="-fx-padding: 10; -fx-background-color: #ff6b35; -fx-text-fill: white;" 
                                                onAction="#abrirVentas" VBox.vgrow="ALWAYS"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                        </ScrollPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-alignment: center;">
            <Label text="Zapateria Pro 2025 - Sistema Profesional de Gestion de Ventas" 
                   style="-fx-text-fill: #ff6b35; -fx-font-size: 10; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
