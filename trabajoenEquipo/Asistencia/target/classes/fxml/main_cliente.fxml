<?xml version="1.0" encoding="UTF-8"?>

<!-- Corrected XML declaration from <?XML to <?xml (lowercase) -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Changed javafx version from 17 to 21 for consistency -->

<BorderPane style="-fx-background-color: #f0f0f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.asistencia.control.ClienteController">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <Label style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;" text="GESTION DE CLIENTES" />
            <Label style="-fx-text-fill: #ff6b35; -fx-font-size: 12; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Administra tu base de datos de compradores y relaciones comerciales" />
        </VBox>
    </top>

    <center>
        <VBox minHeight="-Infinity" minWidth="-Infinity" spacing="20" style="-fx-padding: 25;">

            <VBox prefHeight="225.0" style="-fx-border-color: #e0e0e0; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;" text="FORMULARIO DE CLIENTE" />

                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="140" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="180" prefWidth="250" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="140" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="180" prefWidth="250" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="35" />
                        <RowConstraints minHeight="35" />
                        <RowConstraints minHeight="35" />
                  <RowConstraints minHeight="35.0" prefHeight="30.0" />
                    </rowConstraints>

                    <Label style="-fx-font-weight: bold;" text="ID Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtId" editable="false" prefHeight="36.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label style="-fx-font-weight: bold;" text="Nombre Completo:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="txtNombre" promptText="Ingresa nombre" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label style="-fx-font-weight: bold;" text="Cedula:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCedula" promptText="Numero de identificacion" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label style="-fx-font-weight: bold;" text="Ciudad:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCiudad" promptText="Ciudad de residencia" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label style="-fx-font-weight: bold;" text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtEmail" promptText="correo@example.com" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label style="-fx-font-weight: bold;" text="Telefono:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="txtTelefono" promptText="+1-555-0000" style="-fx-padding: 10;" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               <Label style="-fx-font-weight: bold;" text="Direccion:" GridPane.rowIndex="3" />
               <TextField fx:id="txtDireccion" prefHeight="41.0" prefWidth="250.0" promptText=" Ingrese direccion" style="-fx-padding: 10;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </GridPane>

                <HBox spacing="12" style="-fx-padding: 15 0 0 0;">
                    <Button onAction="#crearCliente" style="-fx-padding: 12; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #2c3e50; -fx-text-fill: white;" text="GUARDAR CLIENTE" />
                    <Button onAction="#limpiarFormulario" style="-fx-padding: 12; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-color: #95a5a6; -fx-text-fill: white;" text="LIMPIAR FORMULARIO" />
                </HBox>
            </VBox>

            <VBox style="-fx-border-color: #e0e0e0; -fx-background-color: white; -fx-padding: 20; -fx-border-width: 2;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;" text="BASE DE DATOS DE CLIENTES" />
                <TableView fx:id="tableView" style="-fx-font-size: 11;" VBox.vgrow="ALWAYS" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
